<%= form_with(model: [@parent, @locatable, @location], local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% @location.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
    <% @location.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

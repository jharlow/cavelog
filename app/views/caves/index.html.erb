<%= page_padding do %>
  <h1>Welcome back!</h1>
  <section>
    <h2>Caves</h2>
    <%= render "search-bar", path: caves_path %>
    <ul>
      <% @caves.each do |cave| %>
        <li>
          <%= link_to cave.title, cave %>
        </li>
      <% end %>
    </ul>
    <%= link_to "New Cave", new_cave_path %>
    <%= link_to "New Log", new_log_path %>
  </section>
<% end %>

<%= page_padding do %>
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <%= render 'components/forms/errors', error_messages: resource.errors.full_messages_for(:email) %>
    </div>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username, value: resource.username == "caver" ? "" : resource.username %>
      <%= render 'components/forms/errors', error_messages: resource.errors.full_messages_for(:username) %>
    </div>
    <div>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <span class="text-sm font-light text-slate-800">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= render 'components/forms/errors', error_messages: resource.errors.full_messages_for(:password) %>
    </div>
    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div>
      <%= f.submit "Sign up", class: 'btn' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
<% end %>

<%= form_for [cave, subsystem] do |form| %>  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% subsystem.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% subsystem.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

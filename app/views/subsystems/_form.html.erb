<%= form_for [cave, subsystem] do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= render 'components/forms/errors', error_messages: subsystem.errors.full_messages_for(:title) %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
    <%= render 'components/forms/errors', error_messages: subsystem.errors.full_messages_for(:description) %>
  </div>
  <div class="action flex gap-2 items-center">
    <%= form.submit class: 'btn' %>
    <%= link_to "Cancel", subsystem.id.present? ? cave_subsystem_path(cave, subsystem) : cave_path(cave) %>
  </div>
<% end %>

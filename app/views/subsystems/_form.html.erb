<%= form_for [cave, subsystem] do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= render 'components/forms/errors', error_messages: subsystem.errors.full_messages_for(:title) %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
    <%= render 'components/forms/errors', error_messages: subsystem.errors.full_messages_for(:description) %>
  </div>
  <div class="action">
    <%= form.submit class: 'btn' %>
  </div>
<% end %>
